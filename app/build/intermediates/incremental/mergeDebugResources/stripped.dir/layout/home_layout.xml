<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCB4B6"
        android:orientation="vertical" android:tag="layout/home_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/textView2"
            style="@style/Question"
            android:layout_width="372dp"
            android:layout_height="98dp"
            android:layout_marginTop="24dp"
            android:paddingLeft="50dp"
            android:paddingTop="30dp"
            android:paddingRight="50dp"
            android:text="@string/about_text1"
            android:textColor="#050505"
            android:textColorHighlight="#E8EAEF"
            android:textColorLink="#F1E6E6"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="152dp"
            tools:layout_conversion_absoluteWidth="445dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="395dp"
            android:layout_height="272dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/friends"
            tools:layout_conversion_absoluteHeight="319dp"
            tools:layout_conversion_absoluteWidth="411dp" />

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="362dp"
            android:layout_height="115dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <TextView
                android:id="@+id/textView4"
                style="@style/Answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:outlineAmbientShadowColor="#0E0C0C"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/about_text3"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#171616"
                android:textColorHighlight="#7E6066"
                android:textSize="18sp"
                tools:layout_conversion_absoluteHeight="153dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="471dp" />
        </ScrollView>

        <Button
            android:id="@+id/ready_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="231dp"
            android:layout_height="54dp"
            android:background="@android:color/holo_purple"
            android:baselineAligned="true"
            android:gravity="center_horizontal|center_vertical"
            android:outlineAmbientShadowColor="#BFA0A0"
            android:outlineSpotShadowColor="#5E1A1A"
            android:shadowColor="#937272"
            android:text="@string/ready_for_the_quiz"
            android:textColor="#201212"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/scrollView3"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="@+id/scrollView3"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3"
            app:layout_constraintVertical_bias="0.052"
            tools:layout_conversion_absoluteHeight="107dp"
            tools:layout_conversion_absoluteWidth="250dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         