<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/fondamento</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bubblegum_sans</item>
        <item name="android:paddingStart">.5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">2.5dp</item>
        <item name="android:paddingEnd">.5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
